{
  "name": "optionatlas",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "scripts": {
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down -v",
    "dev:api": "cd apps/api && ./gradlew bootRun",
    "dev:web": "npm --workspace apps/web run dev",
    "dev": "concurrently -k \"npm:dev:api\" \"npm:dev:web\"",
    "typegen": "npm --workspace apps/web exec openapi-typescript http://localhost:8080/v3/api-docs -o apps/web/src/api/types.ts"
  }
}
